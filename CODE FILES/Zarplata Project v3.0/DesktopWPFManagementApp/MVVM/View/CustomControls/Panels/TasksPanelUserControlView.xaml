            <GradientStop Color="#B4B5B8" Offset="0.10"/>
            <GradientStop Color="#C0C0C3" Offset="0.20"/>
            <GradientStop Color="#CBCCCD" Offset="0.30"/>
            <GradientStop Color="#D7D7D8" Offset="0.60"/>
            <GradientStop Color="#E3E3E3" Offset="0.90"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="SilverMetalicGradientLeftBtnSelectedBackground" StartPoint="0, 0" EndPoint="1, 1">
            <GradientStop Color="#5965f8" Offset="0.0"/>
            <GradientStop Color="#535ce6" Offset="0.10"/>
            <GradientStop Color="#4d53d3" Offset="0.25"/>
            <GradientStop Color="#4749c1" Offset="0.35"/>
            <GradientStop Color="#4140af" Offset="0.45"/>
            <GradientStop Color="#3b379c" Offset="0.55"/>
            <GradientStop Color="#352e8a" Offset="0.65"/>
            <GradientStop Color="#2f2478" Offset="0.70"/>
            <GradientStop Color="#291b65" Offset="0.80"/>
            <GradientStop Color="#231253" Offset="0.90"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="SilverMetalicGradientRightBtnSelectedBackground" StartPoint="0, 0" EndPoint="0.50, 1">
            <GradientStop Color="#231253" Offset="0.0"/>
            <GradientStop Color="#291b65" Offset="0.10"/>
            <GradientStop Color="#2f2478" Offset="0.25"/>
            <GradientStop Color="#352e8a" Offset="0.35"/>
            <GradientStop Color="#3b379c" Offset="0.45"/>
            <GradientStop Color="#4140af" Offset="0.55"/>
            <GradientStop Color="#4749c1" Offset="0.65"/>
            <GradientStop Color="#4d53d3" Offset="0.70"/>
            <GradientStop Color="#535ce6" Offset="0.80"/>
            <GradientStop Color="#5965f8" Offset="0.90"/>
