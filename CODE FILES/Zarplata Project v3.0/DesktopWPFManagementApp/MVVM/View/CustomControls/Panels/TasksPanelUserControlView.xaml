                                        Style="{StaticResource TaskTypeMenuBtnDefaultStyle}"
                                Margin="0 0 5 0"
                                Command="{Binding openBotManagementTasksPanelCommand}">

                                <StackPanel Orientation="Horizontal">

                                    <Image
                                                Source="{StaticResource ManageIconImg}"
                                                Width="15"
                                                Height="Auto"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Margin="5 0 0 0"/>

                                    <TextBlock 
                                                Text="Bot Management"
                                                FontSize="13"
                                                Margin="5 0 0 0"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Left">

                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Setters>
                                                    <Setter Property="Foreground" Value="#210042"/>
                                                </Style.Setters>

                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=RadioButton, Mode=FindAncestor}, Path=IsChecked}" Value="True">
                                                        <DataTrigger.Setters>
                                                            <Setter Property="Foreground" Value="LightGray"/>
                                                        </DataTrigger.Setters>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>

                                    </TextBlock>

                                </StackPanel>

                            </RadioButton>

                        </Border>

                        <Border
                                        Width="1"
                                        Height="20">

