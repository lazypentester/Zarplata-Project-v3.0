    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--#region Main Menu  -->
        <Grid
            Grid.Row="0"
            Background="#1F2145">

            <StackPanel 
