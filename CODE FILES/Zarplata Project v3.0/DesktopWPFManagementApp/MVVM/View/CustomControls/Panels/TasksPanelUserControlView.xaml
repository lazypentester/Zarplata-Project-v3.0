                    CornerRadius="5"
                    Cursor="Hand">

                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Setters>
                                <Setter Property="Background" Value="{DynamicResource SilverMetalicGradientDefaultBackground}"/>
                            </Style.Setters>
                        </Style>
                    </Border.Style>

                    <StackPanel Orientation="Horizontal">

                        <Border
                            CornerRadius="5 0 0 5">

                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Setters>
                                        <Setter Property="Background" Value="Transparent"/>
                                    </Style.Setters>

                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=TaskTypeMenuRadioButton_BotManagementTasks, Path=IsChecked}" Value="True">
