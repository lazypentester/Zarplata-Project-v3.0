                    Margin="10"
                    CornerRadius="5"
                    Cursor="Hand">

                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Setters>
                                <Setter Property="Background" Value="{DynamicResource SilverMetalicGradientDefaultBackground}"/>
                            </Style.Setters>
                        </Style>
                    </Border.Style>

                    <StackPanel Orientation="Horizontal">

                        <Border
                            CornerRadius="5 0 0 5">
                            
