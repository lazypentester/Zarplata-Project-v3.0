                                                Height="Auto"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Margin="5 0 0 0"/>

                                    <TextBlock 
                                                Text="Proxy"
                                                FontSize="13"
                                                Margin="5 0 0 0"
                                                VerticalAlignment="Center"
