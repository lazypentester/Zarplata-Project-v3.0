                                Command="{Binding openProxyTasksSettingsPanelCommand}">

                                <Image
                                                                    Source="{StaticResource TaskTypeSettingBtnIconImg}"
                                                                    Width="20"
                                                                    Height="Auto"
                                                                    HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"
                                Margin="0 0 5 0"/>

                            </RadioButton>
                        </Border>

                    </StackPanel>

                </Border>

