                                <Style TargetType="Border">
                                    <Style.Setters>
                                        <Setter Property="Background" Value="Transparent"/>
                                    </Style.Setters>

                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=TaskTypeMenuRadioButton_EarnSiteTasks, Path=IsChecked}" Value="True">
                                            <DataTrigger.Setters>
                                                <Setter Property="Background" Value="{DynamicResource SilverMetalicGradientLeftBtnSelectedBackground}"/>
                                            </DataTrigger.Setters>
                                        </DataTrigger>

                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <RadioButton
                                        Name="TaskTypeMenuRadioButton_EarnSiteTasks"
                                        GroupName="TaskTypeMenuButton"
                                        Style="{StaticResource TaskTypeMenuBtnDefaultStyle}"
                                        Margin="0 0 5 0"
                                Command="{Binding openEarnSiteTasksPanelCommand}"
                                IsChecked="True">

