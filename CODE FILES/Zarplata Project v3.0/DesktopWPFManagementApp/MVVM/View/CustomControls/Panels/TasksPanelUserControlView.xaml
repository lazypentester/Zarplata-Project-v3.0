                                <Style TargetType="Border">
                                    <Style.Setters>
                                        <Setter Property="Background" Value="Transparent"/>
                                    </Style.Setters>

                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=TaskTypeMenuRadioButton_EarnSiteTasksSettins, Path=IsChecked}" Value="True">
                                            <DataTrigger.Setters>
                                                <Setter Property="Background" Value="{DynamicResource SilverMetalicGradientRightBtnSelectedBackground}"/>
                                            </DataTrigger.Setters>
                                        </DataTrigger>

                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <RadioButton
                                        Name="TaskTypeMenuRadioButton_EarnSiteTasksSettins"
                                        GroupName="TaskTypeMenuButton"
                                        Style="{StaticResource TaskTypeMenuBtnDefaultStyle}"
                                        Margin="5 0 0 0"
                                Command="{Binding openEarnSiteTasksSettingsPanelCommand}">

                                <Image
                                                                    Source="{StaticResource TaskTypeSettingBtnIconImg}"
                                                                    Width="20"
                                                                    Height="Auto"
                                                                    HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"
                                Margin="0 0 5 0"/>

                            </RadioButton>
                            
                        </Border>

                    </StackPanel>
                    
                </Border>

