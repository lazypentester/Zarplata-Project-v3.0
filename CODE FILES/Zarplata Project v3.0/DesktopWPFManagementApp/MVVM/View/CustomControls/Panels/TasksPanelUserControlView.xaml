                        </Border>

                    </StackPanel>

                </Border>

                <Border
                    Name="TaskTypeMenuRadioButton_Captcha"
                    Margin="5 10 10 10"
                    CornerRadius="5"
                    Cursor="Hand">

                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Setters>
                                <Setter Property="Background" Value="{DynamicResource SilverMetalicGradientDefaultBackground}"/>
                            </Style.Setters>
                        </Style>
                    </Border.Style>

                    <StackPanel Orientation="Horizontal">

                        <Border
                            CornerRadius="5 0 0 5">

                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Setters>
                                        <Setter Property="Background" Value="Transparent"/>
                                    </Style.Setters>

                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=TaskTypeMenuRadioButton_CaptchaTasks, Path=IsChecked}" Value="True">
                                            <DataTrigger.Setters>
                                                <Setter Property="Background" Value="{DynamicResource SilverMetalicGradientLeftBtnSelectedBackground}"/>
                                            </DataTrigger.Setters>
                                        </DataTrigger>

                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <RadioButton
                                        Name="TaskTypeMenuRadioButton_CaptchaTasks"
                                        GroupName="TaskTypeMenuButton"
                                        Style="{StaticResource TaskTypeMenuBtnDefaultStyle}"
                                Margin="0 0 5 0"
                                Command="{Binding openCaptchaTasksPanelCommand}">

                                <StackPanel Orientation="Horizontal">

                                    <Image
                                                Source="{StaticResource TaskTypeCaptchaBtnIconImg}"
                                                Width="15"
                                                Height="Auto"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
