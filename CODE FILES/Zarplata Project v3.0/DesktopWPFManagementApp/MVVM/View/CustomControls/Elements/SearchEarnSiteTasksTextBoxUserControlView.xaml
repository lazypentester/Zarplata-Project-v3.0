<UserControl x:Class="DesktopWPFManagementApp.MVVM.View.CustomControls.Elements.SearchEarnSiteTasksTextBoxUserControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesktopWPFManagementApp.MVVM.View.CustomControls.Elements"
             mc:Ignorable="d" 
             Name="root"
             d:DesignHeight="40" Width="Auto">

    <Border
        x:Name="TextBoxCommonBorder"
        BorderThickness="2"
        CornerRadius="5"
        Background="Transparent">
        <Border.Style>
            <Style TargetType="Border">
                <Style.Setters>
                    <Setter Property="BorderBrush" Value="{DynamicResource DefaultTextBoxCommonBorderColor}"/>
                </Style.Setters>

                <Style.Triggers>
                    <DataTrigger Binding="{Binding ElementName=TextBoxCommonGridBorder, Path=IsMouseOver}" Value="True" >
                        <DataTrigger.Setters>
                            <Setter Property="BorderBrush" Value="{DynamicResource HoverTextBoxCommonBorderColor}"/>
                        </DataTrigger.Setters>
                    </DataTrigger>

                    <DataTrigger Binding="{Binding ElementName=TextBoxTextBox, Path=IsFocused}" Value="True" >
                        <DataTrigger.Setters>
                            <Setter Property="BorderBrush" Value="{DynamicResource ActiveTextBoxCommonBorderColor}"/>
                        </DataTrigger.Setters>
                    </DataTrigger>

                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:SearchEarnSiteTasksTextBoxUserControlView}}, Path=IncorrectInputData, UpdateSourceTrigger=PropertyChanged}" Value="True">
                        <DataTrigger.EnterActions>
                            <BeginStoryboard
                                x:Name="IncorrectData_Enter">
                                <Storyboard>
                                    <ColorAnimation 
                                        Storyboard.TargetProperty="(BorderBrush).(SolidColorBrush.Color)"
                                        To="#FF0000"
                                        BeginTime="0:0:0.0" 
                                        Duration="0:0:0.200"
                                        AutoReverse="True"
                                        RepeatBehavior="2x">

                                    </ColorAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </DataTrigger.EnterActions>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Border.Style>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <Border
                Grid.Column="0"
                CornerRadius="5 0 0 5">

                <ComboBox 
                        Name="ComboboxSearchProperty"
                        ItemContainerStyle="{DynamicResource ComboBoxItemContainerStyleOne}" 
                        Style="{DynamicResource ComboBoxStyleOne}"
                        Height="Auto"
                        Width="Auto"
                        BorderThickness="0"
                        ItemsSource="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:SearchEarnSiteTasksTextBoxUserControlView}}, Path=ComboboxItemSourceList, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                        SelectedItem="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:SearchEarnSiteTasksTextBoxUserControlView}}, Path=ComboboxSelectedItem, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                        DisplayMemberPath="Key"
                        FlowDirection="LeftToRight">

                </ComboBox>

            </Border>

            <Border
                x:Name="TextBoxTextBorder"
                Grid.Column="1"
                BorderThickness="0"
                BorderBrush="Transparent"
                CornerRadius="0 5 5 0"
                Background="{DynamicResource DefaultTextBoxIconBackgroundColor}" Grid.ColumnSpan="2">

                <Grid>

                    <TextBlock
                        x:Name="TextBoxPlaceholder"
                        Text="{Binding Placeholder, ElementName=root}"
                        FontSize="14"
                        FontWeight="Light"
                        Foreground="{DynamicResource DefaultTextBoxIconAndPlaceholderColor}"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        Margin="10 0 0 0"
                        />

                    <TextBox
                        x:Name="TextBoxTextBox"
                        Width="auto"
                        Height="32"
                        MinWidth="250"
                        MaxWidth="250"
                        MinHeight="{Binding ElementName=AuthDefaultTextBoxControl, Path=Height}"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="Light"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        VerticalContentAlignment="Center"
                        Margin="0 0 0 0"
                        Padding="10 0 40 0"
                        TextChanged="TextBoxTextBox_TextChanged"
                        GotFocus="TextBoxTextBox_GotFocus"
                        LostFocus="TextBoxTextBox_LostFocus"
                        FontFamily="{Binding FontfamilyCustom, ElementName=root}"
                        Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:SearchEarnSiteTasksTextBoxUserControlView}}, Path=Text, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">

                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Style.Setters>
                                    <Setter Property="Foreground" Value="{DynamicResource DefaultTextBoxTextForegroundColor}" />
                                    <Setter Property="CaretBrush" Value="{DynamicResource DefaultTextBoxTextCaretColor}" />
                                </Style.Setters>

                                <Style.Triggers>
                                    <Trigger Property="IsFocused" Value="True" >
                                        <Trigger.Setters>
                                            <Setter Property="Foreground" Value="{DynamicResource ActiveTextBoxCommonBorderColor}" />
                                            <Setter Property="CaretBrush" Value="{DynamicResource ActiveTextBoxCommonBorderColor}" />
                                        </Trigger.Setters>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>

                    </TextBox>

                </Grid>

            </Border>

            <Button
                Grid.Column="2"
                        Name="RemoveTextButton"
                        Width="25"
                        Height="25"
                        Margin="0 0 10 0"
                        Style="{DynamicResource IconButtonStyle}"
                        HorizontalAlignment="Right" 
                        Visibility="Hidden"
                        Click="RemoveTextButton_Click">

                <Button.ToolTip>
                    <ToolTip
                                Background="Transparent"
                                BorderThickness="0">
                        <Border
                                    Padding="15 10 15 10"
                                    Background="{DynamicResource SecondaryBackColor}"
                                    BorderBrush="{DynamicResource DefaultPrimaryButtonColor}"
                                    BorderThickness="0"
                                    CornerRadius="5"
                                    Opacity="0.9">

                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                            Text="Очистить поле"
                                            FontSize="13"
                                            FontWeight="Medium"
                                            Foreground="LightGray"/>
                            </StackPanel>

                        </Border>
                    </ToolTip>
                </Button.ToolTip>

                <Image 
                            Source="{StaticResource ClearTextIconImg}"
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Center"
                            Cursor="Hand">

                </Image>

            </Button>

        </Grid>

    </Border>

</UserControl>
