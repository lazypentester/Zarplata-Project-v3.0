<UserControl x:Class="DesktopWPFManagementApp.MVVM.View.CustomControls.Elements.AuthTextBoxUserControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesktopWPFManagementApp.MVVM.View.CustomControls.Elements"
             xmlns:fontawesome="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             Name="root"
             d:DesignHeight="40" d:DesignWidth="300">
    <Border
        x:Name="TextBoxCommonBorder"
        BorderThickness="2"
        CornerRadius="5"
        Background="Transparent">

        <Border.Style>
            <Style TargetType="Border">
                <Style.Setters>
                    <Setter Property="BorderBrush" Value="{DynamicResource DefaultTextBoxCommonBorderColor}"/>
                </Style.Setters>

                <Style.Triggers>
                    <DataTrigger Binding="{Binding ElementName=TextBoxCommonGridBorder, Path=IsMouseOver}" Value="True" >
                        <DataTrigger.Setters>
                            <Setter Property="BorderBrush" Value="{DynamicResource HoverTextBoxCommonBorderColor}"/>
                        </DataTrigger.Setters>
                    </DataTrigger>

                    <DataTrigger Binding="{Binding ElementName=TextBoxTextBox, Path=IsFocused}" Value="True" >
                        <DataTrigger.Setters>
                            <Setter Property="BorderBrush" Value="{DynamicResource ActiveTextBoxCommonBorderColor}"/>
                        </DataTrigger.Setters>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Border.Style>

        <Grid
            x:Name="TextBoxCommonGridBorder">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30" />
                <ColumnDefinition Width="188*" />
                <ColumnDefinition Width="69*"/>
            </Grid.ColumnDefinitions>

            <Border
                x:Name="TextBoxIconBorder"
                Grid.Column="0"
                BorderThickness="0"
                BorderBrush="Transparent"
                CornerRadius="5 0 0 5"
                Background="{DynamicResource DefaultTextBoxIconBackgroundColor}">

                <fontawesome:IconImage
                    Name="TextBoxIcon"
                    Icon="{Binding Icon, ElementName=root}" 
                    Width="11" 
                    Height="11"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Margin="2 0 0 0">

                    <fontawesome:IconImage.Style>
                        <Style TargetType="fontawesome:IconImage">
                            <Style.Setters>
                                <Setter Property="Foreground" Value="{DynamicResource DefaultTextBoxIconAndPlaceholderColor}"/>
                            </Style.Setters>

                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=TextBoxTextBox, Path=IsFocused}" Value="True" >
                                    <DataTrigger.Setters>
                                        <Setter Property="Foreground" Value="{DynamicResource ActiveTextBoxIconColor}"/>
                                    </DataTrigger.Setters>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </fontawesome:IconImage.Style>

                </fontawesome:IconImage>

            </Border>

            <Border
                x:Name="TextBoxTextBorder"
                Grid.Column="1"
                BorderThickness="0"
                BorderBrush="Transparent"
                CornerRadius="0 5 5 0"
                Background="{DynamicResource DefaultTextBoxIconBackgroundColor}" Grid.ColumnSpan="2">

                <Grid>
                    <TextBlock
                    x:Name="TextBoxPlaceholder"
                    Text="{Binding Placeholder, ElementName=root}"
                    FontSize="14"
                    FontWeight="Light"
                    Foreground="{DynamicResource DefaultTextBoxIconAndPlaceholderColor}"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Margin="0 0 0 0"
                    />

                    <TextBox
                        x:Name="TextBoxTextBox"
                        Width="auto"
                        Height="auto"
                        MinWidth="250"
                        MinHeight="{Binding ElementName=AuthDefaultTextBoxControl, Path=Height}"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="Light"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        VerticalContentAlignment="Center"
                        Margin="0 0 0 0"
                        TextChanged="TextBoxTextBox_TextChanged"
                        GotFocus="TextBoxTextBox_GotFocus"
                        LostFocus="TextBoxTextBox_LostFocus"
                        FontFamily="{Binding FontfamilyCustom, ElementName=root}"
                        Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:AuthTextBoxUserControlView}}, Path=Text, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">

                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Style.Setters>
                                    <Setter Property="Foreground" Value="{DynamicResource DefaultTextBoxTextForegroundColor}" />
                                    <Setter Property="CaretBrush" Value="{DynamicResource DefaultTextBoxTextCaretColor}" />
                                </Style.Setters>

                                <Style.Triggers>
                                    <Trigger Property="IsFocused" Value="True" >
                                        <Trigger.Setters>
                                            <Setter Property="Foreground" Value="{DynamicResource ActiveTextBoxCommonBorderColor}" />
                                            <Setter Property="CaretBrush" Value="{DynamicResource ActiveTextBoxCommonBorderColor}" />
                                        </Trigger.Setters>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>

                    </TextBox>
                </Grid>

            </Border>

        </Grid>

    </Border>
</UserControl>
