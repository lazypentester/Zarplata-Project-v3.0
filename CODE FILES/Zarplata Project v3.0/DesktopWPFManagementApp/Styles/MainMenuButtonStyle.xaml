    <!-- Menu Button Style -->
    <Style
        x:Key="MainMenuBtnDefaultStyle"
        BasedOn="{StaticResource {x:Type ToggleButton}}"
        TargetType="RadioButton">

        <Style.Setters>

            <!-- Default Button State -->
            <Setter Property="Margin" Value="0,0,0,0" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="{DynamicResource DefaultBorderMenuButtonColor}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border
                            Background="{DynamicResource DefaultBackgroundMenuButtonColor}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="0,0,0,3">

                            <ContentPresenter 
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"/>

                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

        </Style.Setters>

        <Style.Triggers>

            <!-- Mouse On Button State -->
            <Trigger Property="IsMouseOver" Value="True" >
                <Setter Property="Margin" Value="0,0,0,0" />
                <Setter Property="Background" Value="{DynamicResource HoverBackgroundMenuButtonColor}" />
                <Setter Property="BorderBrush" Value="{DynamicResource HoverBorderMenuButtonColor}" />
            </Trigger>

            <!-- Mouse Active Button State -->
            <Trigger Property="IsChecked" Value="True" >
                <Setter Property="Margin" Value="0,0,0,0" />
                <Setter Property="Background" Value="{DynamicResource ActiveBackgroundMenuButtonColor}" />
                <Setter Property="BorderBrush" Value="{DynamicResource ActiveBorderMenuButtonColor}" />
            </Trigger>

        </Style.Triggers>

    </Style>
    
    
