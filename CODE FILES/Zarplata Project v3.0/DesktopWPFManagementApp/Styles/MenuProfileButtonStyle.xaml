<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:fontawesome="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp">

    <Style
        x:Key="MenuProfileBtnStyle"
        BasedOn="{StaticResource {x:Type ToggleButton}}"
        TargetType="RadioButton">

        <Style.Setters>
            <Setter Property="Background" Value="{DynamicResource DefaultBackgroundMenuProfileButtonColor}"/>
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Margin" Value="15 0 0 0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">

                        <Border
                            Background="{TemplateBinding Background}">
                            <Border.Clip>
                                <EllipseGeometry
                                Center="15,15"
                                RadiusX="15"
                                RadiusY="15">

                                </EllipseGeometry>
                            </Border.Clip>

                            <ContentPresenter 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">

                            </ContentPresenter>
                        </Border>
                        
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>

        <Style.Triggers>

            <!-- Mouse On Button State -->
            <Trigger Property="IsMouseOver" Value="True" >
                <Setter Property="Background" Value="{DynamicResource HoverBackgroundWindowControlButtonColor}" />
            </Trigger>

        </Style.Triggers>
        
    </Style>

    <!-- Menu Button Icon Style -->
    <Style
        x:Key="MainMenuProfileBtnIconDefaultStyle"
        TargetType="fontawesome:IconImage">

        <Style.Setters>

            <!-- Default Button State -->
            <Setter Property="Foreground" Value="{DynamicResource DefaultBackgroundMenuIconProfileButtonColor}" />
            <Setter Property="Width" Value="25"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Margin" Value="0 10 0 0"/>

        </Style.Setters>

        <Style.Triggers>

            <!-- Mouse On Button State -->
            <DataTrigger Binding="{Binding ElementName=MainMenuRadioButton_Profile, Path=IsMouseOver}" Value="True">
                <DataTrigger.Setters>

                    <Setter Property="Foreground" Value="{DynamicResource HoverBackgroundMenuIconProfileButtonColor}"/>
                    <Setter Property="Width" Value="26"/>
                    <Setter Property="Height" Value="26"/>
                    <Setter Property="Margin" Value="0 5 0 0"/>

                </DataTrigger.Setters>
            </DataTrigger>


            <!-- Mouse Active Button State  -->
            <DataTrigger Binding="{Binding ElementName=MainMenuRadioButton_Profile, Path=IsChecked}" Value="True">
                <DataTrigger.Setters>

                    <Setter Property="Foreground" Value="{DynamicResource ActiveBackgroundMenuIconProfileButtonColor}"/>
                    <Setter Property="Width" Value="26"/>
                    <Setter Property="Height" Value="26"/>
                    <Setter Property="Margin" Value="0 5 0 0"/>

                </DataTrigger.Setters>
            </DataTrigger>

        </Style.Triggers>

    </Style>

</ResourceDictionary>